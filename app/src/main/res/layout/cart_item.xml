<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="21.2dp"
        android:layout_marginTop="28.4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="74.3dp"
            android:layout_height="74.3dp"
            android:src="@drawable/tonant_logo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Garlic"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:id="@+id/Qunatity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.3dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Quantity: 1Kg  |  Amount: 40Rs"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.7dp"
                android:visibility="gone"
                android:background="@drawable/inc_second_ract"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_green2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/value_inc_dec_ract"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/decrement2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingBottom="4dp"
                        android:paddingLeft="19.5dp"
                        android:paddingTop="2dp"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="19.7sp" />

                    <TextView
                        android:id="@+id/display_inc_dec2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="16.3sp" />

                    <TextView
                        android:id="@+id/increment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingBottom="4dp"
                        android:paddingLeft="29.3dp"
                        android:paddingRight="12dp"
                        android:paddingTop="2dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="19.7sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/down_view_linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="40Rs"
                        android:textColor="@color/green"
                        android:textSize="12.3sp" />

                    <TextView
                        android:id="@+id/PWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text=" | 1Kg"
                        android:textColor="@color/black"
                        android:textSize="12.3sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/RemoveFrame"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/cancel_ract" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5.5dp"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/roboto_light"
                android:text="x"

                android:layout_marginRight="0.5dp"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>