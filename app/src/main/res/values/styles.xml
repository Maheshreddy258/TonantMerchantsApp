<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#d5d5d5</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#d5d5d5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">#DFD2D2</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#FFFCFC</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <!-- Base application theme. -->
    <style name="EditText.Yellow" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>
</resources>
